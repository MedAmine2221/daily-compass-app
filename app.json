{
  "expo": {
    "name": "Your Daily Compass",
    "slug": "to-do-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/compass.png",
    "scheme": "todoapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mohamed-amine-lazreg.todoapp"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.mohamed_amine_lazreg.todoapp"
    },
    "web": {
      "output": "server",
      "favicon": "./src/assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-localization",
      "expo-mail-composer",
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "manifest": {
              "usesFeatures": [
                {
                  "name": "android.hardware.camera.ar",
                  "required": false
                }
              ]
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "561bdda6-b025-47c7-b2b3-82a5959ee95f"
      }
    }
  }
}
